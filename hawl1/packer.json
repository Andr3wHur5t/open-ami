    "script": "iptabels.sh"
  },
  {
    "type": "shell",
    "script": "harden.sh"
  },
  {
    "type": "shell",
    "script": "clean-up.sh"
  },
  {
    "type": "shell",
    "script": "validate.sh"
  }]
