{
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "source_ami": "ami-6df1e514",
    "instance_type": "m3.medium",
    "ssh_username": "ec2-user",
    "ami_name": "HAWL1-{{isotime \"2006-01-02\"}}"
  }],
  "provisioners": [{
