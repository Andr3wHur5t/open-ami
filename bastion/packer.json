{
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "source_ami": "ami-ad895cd5",
    "instance_type": "m3.medium",
    "ssh_username": "ec2-user",
    "ami_name": "HAWL1-Bastion-{{isotime \"2006-01-02_15\"}}"
  }],
  "provisioners": [{
    "type": "shell",
    "script": "firewall.sh"
  },{
    "type": "shell",
    "inline": ["mkdir /tmp/files"]
  },{
    "type": "file",
    "source": "./files",
    "destination": "/tmp/"
  },{
    "type": "shell",
    "script": "configure.sh"
  },{
    "type": "shell",
    "script": "validate.sh"
  }]
}
